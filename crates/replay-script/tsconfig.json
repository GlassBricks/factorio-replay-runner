{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/refs/heads/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "none",
    "types": ["typed-factorio/runtime"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "rootDir": "tstl_src"
  },
  "include": ["tstl_src/**/*.ts"],
  "tstl": {
    "luaTarget": "5.2",
    "noImplicitSelf": true,
    "luaLibImport": "inline",
    "luaPlugins": [
      {
        "name": "./tstl_src/no-export-plugin.js"
      }
    ],
    "noHeader": true
  }
}
